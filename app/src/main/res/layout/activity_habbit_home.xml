<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent" android:layout_height="match_parent">

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add Habbit"
    android:id="@+id/Add_Habbit_Button"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:longClickable="true"
    android:singleLine="false" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Delete Habbit"
    android:id="@+id/Delete_Habbit_Button"
    android:layout_above="@+id/Add_Habbit_Button"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="History"
    android:id="@+id/History_Habbit_Button"
    android:layout_above="@+id/Delete_Habbit_Button"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true" />
</RelativeLayout>